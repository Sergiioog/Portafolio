---
import OffCanvas from "./OffCanvas.astro";
---

<section>
    <figure>
        <img src="assets/iconos/sergiologo.png" alt="Icono de S">
    </figure>
    <div>
        <OffCanvas />
    </div>
</section>

<style>
    section {
        height: 8vh;
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
    figure {
        height: 100%;
        width: auto;
        display: flex;
        justify-content: center;
        align-items: center;

    }
    img {
        width: 60%;
        max-width: 100%;
        max-height: 100%;
    }
    div {
        height: 100%;
        margin-right: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>