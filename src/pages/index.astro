---
import Layout from '../layouts/Layout.astro';
import OffCanvas from '../components/OffCanvas.astro';
import Header from '../components/Header.astro';
---

<Layout title="Welcome to Astro.">
	<Header />
	<section>
		<div class="sergioPrincipal">
			<figure>
				<img src="assets/fotos/sergio.png" alt="Foto de Sergio">
			</figure>
			<h1>Sergio García</h1>
		</div>
	</section>
</Layout>

<style>
	section {
		height: 100vh; /*Cambiar a auto*/
		width: 100%;
	}
	.sergioPrincipal {
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		margin-top: 10vh;
	}
	figure {
        height: 300px;
        width: 300px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        overflow: hidden;
		border:  2px solid whitesmoke;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Esto mantiene la relación de aspecto y centra la imagen */
    }


	h1 {
		font-size: 1.8rem;
		line-height: 2.75rem;
		font-weight: 700;
		letter-spacing: -0.025em;
		margin-bottom: 2rem;
	}











</style>
