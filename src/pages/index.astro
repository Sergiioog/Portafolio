---
import Layout from '../layouts/Layout.astro';
import OffCanvas from '../components/OffCanvas.astro';
import Header from '../components/Header.astro';
---

<Layout title="Sergiioog">
	<Header />
	<section>
		<div class="sergioPrincipal">
			<figure>
				<img src="assets/fotos/sergio.png" alt="Foto de Sergio">
			</figure>
			<h1>Sergio García</h1>
			<h2 class="text-gradient">Desarrollador Web</h2>
		</div>
	</section>
</Layout>

<style>
	section {
		height: 100vh; /*Cambiar a auto*/
		width: 100%;
	}
	.sergioPrincipal {
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		margin-top: 10vh;
	}
	figure {
        height: 250px;
        width: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        overflow: hidden;
		border:  2px solid whitesmoke;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Esto mantiene la relación de aspecto y centra la imagen */
    }


	h1 {
		font-size: 2.2rem;
		line-height: 2.5rem;
		font-weight: 700;
		letter-spacing: -0.020em;
		margin-bottom: 0.2rem;
	}

	h2 {
		font-size: 1.8rem;
		line-height: 2.5rem;
		font-weight: 700;
		letter-spacing: -0.020em;

	}



	.text-gradient {
		background-image: linear-gradient(
			45deg,
			var(--base) 25%,
			var(--complimentary2)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		-moz-background-clip: text;
		-moz-text-fill-color: transparent;
	}





</style>
