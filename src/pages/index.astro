---
import Layout from '../layouts/Layout.astro';
import OffCanvas from '../components/OffCanvas.astro';
import Header from '../components/Header.astro';
---

<Layout title="Sergiioog">
	<Header />
	<section id="principal">
		<div class="sergioPrincipal">
			<figure>
				<img src="assets/fotos/sergio.png" alt="Foto de Sergio">
			</figure>
			<div id="nombreApellidos">
				<h1>Sergio García</h1>
				<h2>Desarrollador Web</h2>
				<div class="contactame">
					<p>Contáctame</p>
				</div>
				<div class="redesSociales">
					<p>Sígueme en mis otras Redes sociales.</p>
					<button class="botonRed"><a href="#"><img src="assets/iconos/linkedin.svg" alt=""></a></button>
				</div>
				
			</div>
			
			
			
			
		
			  
		</div>
	</section>
	


</Layout>

<style>
	#principal {
    height: auto;
    width: 100%;
    margin-bottom: 35vh;
}

.sergioPrincipal {
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 10vh;
    text-align: center;
}

figure {
    height: 250px;
    width: 250px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid whitesmoke;
}

img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
	background-color: white;
}

#nombreApellidos {
    max-width: 70%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

h1,
h2 {
    font-weight: 700;
    letter-spacing: -0.030em;
    background: radial-gradient(rgb(191, 219, 254), rgb(212, 212, 216), rgb(51, 65, 85));
    -webkit-background-clip: text;
    color: transparent;
    background-size: 100% 80%;
}

h1 {
    font-size: 2.3rem;
	padding: 2px;
}

h2 {
    font-size: 1.6rem;
}

.button, .contactame {
    background: rgba(24, 24, 24, 0.9);
    box-shadow: 0 0 20px 0 rgba(225, 223, 223, 0.37);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border-radius: 10px;
    border: 1px solid rgba(255, 253, 253, 0.851);
    color: white;
    height: 35px;
    width: 70%;

    font-size: 20px;
    font-weight: 700;
    letter-spacing: -0.030em;
    margin-top: 15px;
}

.contactame {
    background-color: rgba(233, 233, 233, 0.885);
    color: black;
    border: 1px solid white;
    box-shadow: 0 0 20px 0 rgba(225, 223, 223, 0.37);
    transition: background-color 0.7s, color 0.7s, border 0.7s ease-in-out, box-shadow 0.7s ease-in-out;
    cursor: pointer;
}

.contactame:hover {
    box-shadow: 0 0 50px 10px rgba(225, 223, 223, 0.37), 0 0 30px 0 rgba(255, 255, 255, 0.5);
}



.redesSociales {
	font-size: 14px;
	margin-top: 20vh;
	font-weight: 700;
	color: rgb(175, 175, 175);
}

.botonRed {
	height: 40px;
	width: 40px;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: auto;

}

</style>
