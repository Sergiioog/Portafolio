---
import Layout from '../layouts/Layout.astro';
import OffCanvas from '../components/OffCanvas.astro';
import Header from '../components/Header.astro';
---

<Layout title="Sergiioog">
	<Header />
	<section id="principal">
		<div class="sergioPrincipal">
			<figure>
				<img src="assets/fotos/sergio.png" alt="Foto de Sergio">
			</figure>
			<h1>Sergio García</h1>
			<h2>Desarrollador Web</h2>
		
			  
		</div>
	</section>
	


</Layout>

<style>
	#principal {
		height: auto; /*Cambiar a auto*/
		width: 100%;
		margin-bottom: 35vh;
	}
	.sergioPrincipal {
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		margin-top: 10vh;
	}
	figure {
        height: 250px;
        width: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        overflow: hidden;
		border:  2px solid whitesmoke;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Esto mantiene la relación de aspecto y centra la imagen */
		background: rgba( 255, 255, 255, 0.2 );
		box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
		backdrop-filter: blur( 14.5px );
		-webkit-backdrop-filter: blur( 14.5px );
		border-radius: 10px;
		border: 1px solid rgba( 255, 255, 255, 0.18 );
    }


	h1,
	h2 {
	font-size: 2.5rem;
	line-height: 2.5rem;
	font-weight: 700;
	letter-spacing: -0.020em;
	margin-bottom: 0.2rem;
	background: radial-gradient(at right, rgb(241, 245, 249), rgb(59, 130, 246), rgb(0, 0, 0));
	-webkit-background-clip: text; /* Para navegadores WebKit como Chrome y Safari */
	color: transparent; /* Hace que el color del texto sea transparente */
	}

	h2 {
		font-size: 1.8rem;
	}



</style>
